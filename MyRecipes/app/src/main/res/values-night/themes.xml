<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyRecipes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light</item>
        <item name="colorPrimaryVariant">@color/dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light</item>
        <item name="colorSecondaryVariant">@color/medium</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/light</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#6A706E</item>
        <item name="android:editTextColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textCursorDrawable">@color/white</item>
    </style>
</resources>